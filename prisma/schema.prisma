generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Donor {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  phone String
  bloodGroup String
  district String
  upazila String
  city String
  latitude Float
  longitude Float
  isActive    Boolean  @default(true)
  otp String?
  otpExpires DateTime?
  createdAt DateTime @default(now())
}